<!-- to show the singl post with all comments, likes  -->

<%- include('../partials/header') %>
    <!-- show post itself -->
    <section class="post-itself">
        <div>
            <img alt="avatar" src="<%= post.userAvatar %>">
        </div>
        <div>
            <%=post.userName%>
        </div>
        <div>
            <%=post.content%>
        </div>
        <!-- to add timestamp -->
    </section>
    <br><br>


    <!-- userto add new comment -->
    <form id="add-comment-form" method="POST" action="/<%=post._id%>/comments">
        <textarea name="content" placeholder="Add a comment"></textarea>
        <input type="submit" value="Comment">
    </form>
    <br><br>


    <!-- show post comments -->
    <!-- get commentd array from the post -->
    <!-- list each comment -->
    <section class="comment">
        <%post.comment.forEach(function(c){%>
            <div>
                <img alt="avatar" src="<%= c.userAvatar %>">
            </div>
            <div>
                <%=c.userName%>
            </div>
            <div>
                <%=c.content%>
            </div>
            <!-- to sorted by time -->
            <%})%>

    </section>


    <%- include('../partials/footer') %>